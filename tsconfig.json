{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2017",
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules"],
  "include": ["src"],
}
